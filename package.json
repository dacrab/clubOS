{
  "name": "clubos-svelte",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && npx ultracite check && knip",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch && npx ultracite fix --watch",
    "test:unit": "bunx vitest",
    "test": "bun run test:unit -- --run",
    "db:seed": "bunx tsx scripts/seed.ts",
    "db:reset": "supabase db reset && bunx tsx scripts/seed.ts",
    "db:restart": "supabase stop && supabase start"
  },
  "devDependencies": {
    "@internationalized/date": "^3.10.0",
    "@lucide/svelte": "^0.544.0",
    "@sveltejs/adapter-vercel": "^5.10.3",
    "@sveltejs/kit": "^2.46.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.14",
    "@types/node": "^24.7.2",
    "bits-ui": "^2.11.5",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "jsdom": "^27.0.0",
    "knip": "^5.64.3",
    "svelte": "^5.39.11",
    "svelte-check": "^4.3.3",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^4.1.14",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "ultracite": "5.6.2",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.75.0",
    "flatpickr": "^4.6.13",
    "svelte-sonner": "^1.0.5"
  }
}
