{
  "name": "clubos-svelte",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && knip && eslint .",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "quality": "npm run test:coverage && npm run check",
    "db:seed": "bunx tsx scripts/seed.ts",
    "db:reset": "supabase db reset && bunx tsx scripts/seed.ts",
    "db:restart": "supabase stop && supabase start"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@internationalized/date": "^3.10.1",
    "@lucide/svelte": "^0.562.0",
    "@sveltejs/adapter-vercel": "^6.2.0",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/svelte": "^5.2.10",
    "@types/d3-scale": "^4.0.9",
    "@types/node": "^24.10.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/eslint-plugin": "^1.5.4",
    "bits-ui": "^2.14.4",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-svelte": "^3.13.1",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "knip": "^5.76.1",
    "svelte": "^5.45.8",
    "svelte-check": "^4.3.5",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "d3-scale": "^4.0.2",
    "layerchart": "^1.0.12",
    "svelte-sonner": "^1.0.7"
  }
}
