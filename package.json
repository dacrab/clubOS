{
  "name": "clubos-svelte",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && biome check && knip",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch && biome check --write --watch",
    "test:unit": "bunx vitest",
    "test": "bun run test:unit -- --run",
    "db:seed": "bunx tsx scripts/seed.ts",
    "db:reset": "supabase db reset && bunx tsx scripts/seed.ts",
    "db:restart": "supabase db stop && supabase db start"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@internationalized/date": "^3.8.1",
    "@lucide/svelte": "^0.515.0",
    "@sveltejs/adapter-vercel": "^5.6.3",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^24.5.2",
    "bits-ui": "^2.8.6",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "knip": "^5.63.1",
    "svelte": "^5.0.0",
    "svelte-check": "^4.3.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.0.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "ultracite": "5.4.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "svelte-sonner": "^1.0.5"
  }
}
