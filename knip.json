{
	"$schema": "https://unpkg.com/knip@latest/schema.json",
	"entry": [
		"src/routes/**/*.{svelte,ts}",
		"src/lib/**/*.{ts,svelte}",
		"src/**/*.{test,spec}.ts",
		"scripts/**/*.ts",
		"e2e/**/*.ts"
	],
	"project": ["src/**/*.{ts,svelte}", "scripts/**/*.ts", "e2e/**/*.ts"],
	"ignoreDependencies": ["tailwindcss-animate"],
	"ignoreBinaries": ["supabase"],
	"ignore": [".svelte-kit/**", "**/$types.d.ts"],
	"paths": {
		"$lib/*": ["src/lib/*"],
		"$app/*": [".svelte-kit/types/app/*"],
		"$env/*": [".svelte-kit/ambient.d.ts"]
	}
}
