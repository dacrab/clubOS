{
	"$schema": "https://unpkg.com/knip@latest/schema.json",
	"workspaces": {
		".": {
			"entry": [
				"src/routes/**/*.{svelte,ts}",
				"src/lib/**/*.{ts,svelte}",
				"src/**/*.{test,spec}.ts",
				"scripts/**/*.ts",
				"vitest.config.ts"
			],
			"project": ["src/**/*.{ts,svelte}", "scripts/**/*.ts"],
			"ignoreDependencies": ["tailwindcss-animate", "@testing-library/svelte"],
			"ignoreBinaries": ["supabase"],
			"ignore": [
				".svelte-kit/**",
				"**/$types.d.ts",
				"src/app-mocks/**"
			],
			"paths": {
				"$lib/*": ["src/lib/*"],
				"$app/*": [".svelte-kit/types/app/*"],
				"$env/*": [".svelte-kit/ambient.d.ts"]
			}
		}
	}
}
